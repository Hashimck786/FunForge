                        <% if(typeof category != undefined && category.length>0){
                            category.forEach((category)=>{ %>
                                <div class="card-1">
                                    <figure class=" img-hover-scale overflow-hidden">
                                        <a href="/shop/?category=<%= category._id%>"><img src="/assets/imgs/shop/category.png" alt=""></a>
                                    </figure>
                                    <h5><a href="/shop/?category=<%= category._id %>"><%= category.categoryName %></a></h5>
