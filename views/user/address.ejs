<%- include('../layout/header') %>

<main class="container mt-4">
        <!-- Add Address Button -->
        <div class="row mb-3">
            <div class="col-12">
                <a href="/addaddress" class="btn btn-fill-out submit">
                    <i class="fas fa-plus"></i> Add Address
                </a>
            </div>
        </div>
        
    <div class="row">
        <% if (typeof address !== "undefined" && address.length > 0) {
            for (let i = 0; i < address.length; i++) { %>
                <div class="col-lg-6">
                    <div class="card mb-3 mb-lg-4">
                        <div class="card-header">
                            <% if (address[i].is_Default) { %>
                                <span class="default-badge">Default</span>
                            <% } %>
                            <h5 class="mb-0"><%= address[i].addressname %></h5>
                        </div>
                        <div class="card-body">
                            <address>
                                <%= address[i].streetaddress %><br>
                                <%= address[i].city %><br>
                                <%= address[i].state %><br>
                                <%= address[i].country %><br>
                                <%= address[i].pincode %><br>
                                <%= address[i].phone %><br>
                                <%= address[i].alterphone %>
                            </address>
                            <p>New York</p>
                            <a href="/editaddress/?id=<%= address[i]._id %>" class="btn btn-warning btn-sm" role="button">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            
                            <a href="/deleteaddress/?id=<%= address[i]._id %>" class="btn btn-danger btn-sm" role="button">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                            
                            <% if (!address[i].is_Default) { %>
                                <a href="/defaultaddress/?id=<%= address[i]._id %>&checkout=<%=checkout%>" class="btn btn-success btn-sm" role="button">
                                    <i class="fas fa-check"></i> Make Default
                                </a>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }
        } else { %>
            <div class="col-12">
                <h3>Please click to add address</h3>
            </div>
        <% } %>
    </div>

</main>


<%-include('../layout/footer') %>