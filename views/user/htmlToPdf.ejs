<main style="margin-top: 4rem;" class="container">
  <div style="box-shadow: 0 .125rem .25rem rgba(0,0,0,.075);" class="card">
    <header style="background-color: #007bff; color: #fff; text-align: center;" class="card-header">
      <h1 style="font-size: 2.5rem;" class="display-4">INVOICE</h1>
    </header>

    <div class="card-body">
      <section style="border-bottom: 1px solid #dee2e6; padding-bottom: 1rem; margin-bottom: 1rem;">
        <h2 style="font-size: 2rem; margin-bottom: 1rem;">Order Information</h2>
        <div style="margin-bottom: .75rem;" class="row">
          <div style="flex: 0 0 33.333333%; max-width: 33.333333%; color: #6c757d;" class="col-md-4"><strong>Order ID:</strong></div>
          <div style="color: #28a745; font-size: 1.25rem;" class="col-md-8"><%= orderData._id %></div>
        </div>
        <div style="margin-bottom: .75rem;" class="row">
          <div style="flex: 0 0 33.333333%; max-width: 33.333333%; color: #6c757d;" class="col-md-4"><strong>Order Date:</strong></div>
          <div style="color: #28a745; font-size: 1.25rem;" class="col-md-8"><%= orderData.date %></div>
        </div>
        <div class="row">
          <div style="flex: 0 0 33.333333%; max-width: 33.333333%; color: #6c757d;" class="col-md-4"><strong>Order Value:</strong></div>
          <div style="color: #28a745; font-size: 1.25rem;" class="col-md-8">$<%= orderData.orderValue.toFixed(2) %></div>
        </div>
      </section>

      <section style="border-bottom: 1px solid #dee2e6; padding-bottom: 1rem; margin-bottom: 1rem;">
        <h2 style="font-size: 2rem; margin-bottom: 1rem;">Ordered Products</h2>
        <div class="table-responsive">
          <table style="width: 100%;" class="table table-bordered table-striped">
            <thead style="background-color: #f8f9fa;" class="thead-light">
              <tr>
                <th scope="col">Product Image</th>
                <th scope="col">Product ID</th>
                <th scope="col">Product Name</th>
                <th scope="col">Quantity</th>
                <th scope="col">Product Price</th>
                <th scope="col">Total</th>
              </tr>
            </thead>
            <tbody>
              <% orderData.products.forEach(function(product) { %>
                <tr>
                  <td>
                    <img src="http://localhost:3000//admin-assets/imgs/productImages/<%= product.productImage %>" class="img-fluid img-thumbnail" alt="Item" style="max-height: 60px; max-width: 60px;">
                  </td>
                  <td style="color: #007bff;"><%= product.productId %></td>
                  <td style="color: #007bff;"><%= product.productName %></td>
                  <td style="color: #007bff;"><%= product.quantity %></td>
                  <td style="color: #007bff;">$<%= product.productPrice %></td>
                  <td style="color: #007bff;">$<%= product.quantity * product.productPrice %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </section>

      <section>
        <h2 style="font-size: 2rem; margin-bottom: 1rem;">Shipping Address</h2>
        <ul class="list-group">
          <li style="background-color: #ffc107;" class="list-group-item">
            <p style="margin-bottom: .5rem; font-size: 1.25rem; color: #343a40;"><strong>Name:</strong> <%= orderData.addressDetails.name %></p>
            <p style="margin-bottom: .5rem; font-size: 1.25rem; color: #343a40;"><strong>Postcode:</strong> <%= orderData.addressDetails.postcode %></p>
            <p style="margin-bottom: .5rem; font-size: 1.25rem; color: #343a40;"><strong>Phone:</strong> <%= orderData.addressDetails.phone %></p>
            <p style="margin-bottom: .5rem; font-size: 1.25rem; color: #343a40;"><strong>Street Address:</strong> <%= orderData.addressDetails.streetaddress %></p>
            <p style="margin-bottom: .5rem; font-size: 1.25rem; color: #343a40;"><strong>City:</strong> <%= orderData.addressDetails.city %></p>
            <p style="margin-bottom: .5rem; font-size: 1.25rem; color: #343a40;"><strong>State:</strong> <%= orderData.addressDetails.state %></p>
            <p style="margin-bottom: .5rem; font-size: 1.25rem; color: #343a40;"><strong>Country:</strong> <%= orderData.addressDetails.country %></p>
          </li>
        </ul>
      </section>
    </div>

    <footer style="color: #6c757d; text-align: center; background-color: #17a2b8;" class="card-footer">
      &copy; 2023 Your Company Name
    </footer>
  </div>
</main>

