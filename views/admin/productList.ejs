<%- include('../layout/adminheader') %>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Products List</h2>
                    <p>Admin can edit , list and unlist products here</p>
                </div>
                <div>
                    <!-- <a href="#" class="btn btn-light rounded font-md">Export</a>
                    <a href="#" class="btn btn-light rounded  font-md">Import</a> -->
                    <a href="/gadgetly/admin/loadAddProduct" class="btn btn-primary btn-sm rounded">Create new</a>
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row align-items-center">
                        <div class="col col-check flex-grow-0">
                            <div class="form-check ms-2">
                                <input class="form-check-input" type="checkbox" value="">
                            </div>
                        </div>
                        <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
                            <select class="form-select">
                                <option selected>All category</option>
                                <option>Electronics</option>
                                <option>Clothes</option>
                                <option>Automobile</option>
                            </select>
                        </div>
                        <div class="col-md-2 col-6">
                            <input type="date" value="02.05.2021" class="form-control">
                        </div>
                        <div class="col-md-2 col-6">
                            <select class="form-select">
                                <option selected>Status</option>
                                <option>Active</option>
                                <option>Disabled</option>
                                <option>Show all</option>
                            </select>
                        </div>
                    </div>
                </header> <!-- card-header end// -->
                <div class="card-body">
                        
                            <!-- <div class="col col-check flex-grow-0">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox">
                                </div>
                            </div> -->
                         <% if(typeof product != "undefined"){
                            for(let i=0; i<product.length; i++){ %>
                                <article class="itemlist">
                                    <div class="row align-items-center">
                                        <div class="col-lg-4 col-sm-4 col-8 flex-grow-1 col-name">
                                            <a class="itemside" href="#">
                                                <div class="left">
                                                    <img src="/admin-assets/imgs/productImages/<%= product[i].image[0] %>" class="img-sm img-thumbnail" alt="Item">
                                                </div>
                                                <div class="info">
                                                    <h6 class="mb-0"><%= product[i].productName %></h6>
                                                </div>
                                            </a>
                                        </div>
                                        <div class="col-lg-2 col-sm-2 col-4 col-price"> <span><%= product[i].productPrice %></span> </div>
                                        <div class="col-lg-2 col-sm-2 col-4 col-status">
                                            <span class="badge rounded-pill alert-success">Active</span>
                                        </div>
                                        <div class="col-lg-1 col-sm-2 col-4 col-date">
                                            <span><%= product[i].Stock %></span>
                                        </div>
                                        <div class="col-lg-2 col-sm-2 col-4 col-action text-end">
                                            <a href="/gadgetly/admin/edit?id=<%=product[i]._id %>" class="btn btn-sm font-sm rounded btn-brand">
                                                <i class="material-icons md-edit"></i> Edit
                                            </a>
                                            <%if(product[i].is_listed ==0 ){ %>
                                                <a href="/gadgetly/admin/list?id=<%=product[i]._id %>" class="btn btn-sm font-sm btn-light rounded  list-btn"  productId="<%=product[i]._id %>" style="background-color: green;">
                                                    <i class="material-icons md-delete_forever"></i> List
                                                </a>
                                            <% }else{ %>
                                                <a href="/gadgetly/admin/unlist?id=<%=product[i]._id %>"  class="btn btn-sm font-sm btn-light rounded unlist-btn" productId="<%=product[i]._id %>"  style="background-color: red;">
                                                    <i class="material-icons md-delete_forever"></i> Unlist
                                                </a>
                                           <% } %>
                                            
                                        </div>
                                    </div>
                                </article>                                            
                               <% }

                            }else{
                                
                            } %>

                </div> <!-- card-body end// -->
            </div> <!-- card end// -->
            <div class="pagination-area mt-30 mb-50">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-start">
                        <% for(i=1; i<=totalPages; i++){ %>
                            <li class="page-item"><a class="page-link" href="?page=<%= i %>&search=<%=searchTerm%>"><%= i %></a></li>  
                        <% } %>
                    </ul>
                </nav>
            </div>
        </section> <!-- content-main end// -->
        <%-include('../layout/adminfooter') %>