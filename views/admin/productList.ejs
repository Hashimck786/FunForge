<%- include('../layout/adminheader') %>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Products List</h2>
                    <p>Admin can edit , list and unlist products here</p>
                </div>
                <div>
                    <!-- <a href="#" class="btn btn-light rounded font-md">Export</a>
                    <a href="#" class="btn btn-light rounded  font-md">Import</a> -->
                    <a href="/gadgetly/admin/loadAddProduct" class="btn btn-primary btn-sm rounded">Create new</a>
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row align-items-center">
                        <div class="col col-check flex-grow-0">
                            <div class="form-check ms-2">
                                <input class="form-check-input" type="checkbox" value="">
                            </div>
                        </div>
                        <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
                            <select class="form-select">
                                <option selected>All category</option>
                                <option>Electronics</option>
                                <option>Clothes</option>
                                <option>Automobile</option>
                            </select>
                        </div>
                        <div class="col-md-2 col-6">
                            <input type="date" value="02.05.2021" class="form-control">
                        </div>
                        <div class="col-md-2 col-6">
                            <select class="form-select">
                                <option selected>Status</option>
                                <option>Active</option>
                                <option>Disabled</option>
                                <option>Show all</option>
                            </select>
                        </div>
                    </div>
                </header> <!-- card-header end// -->
                <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped align-middle table-nowrap mb-0 table-hover" id="myTable">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="align-middle" scope="col">Image</th>
                                            <th class="align-middle" scope="col">Name</th>
                                            <th class="align-middle" scope="col">Price</th>
                                            <th class="align-middle" scope="col">discount%</th>
                                            <th class="align-middle" scope="col">OfferPrice</th>
                                            <th class="align-middle" scope="col">Edit</th>
                                            <th class="align-middle" scope="col">Stock</th>
                                            <th class="align-middle" scope="col">List/unList</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                      <% if(typeof product != "undefined" && product.length>0){
                                        product.forEach((product,index)=>{  %>
                                          <tr>
                                            <td><img src="/admin-assets/imgs/productImages/<%= product.image[0] %>" class="img-sm img-thumbnail" style="width: 50px; height: 50px;border-radius: 50%;" alt="Item"> </td>
                                            <td><%= product.productName %></td>
                                            <td>
                                                <%= product.productPrice %>
                                            </td>
                                            <td>
                                                <%= product.productDiscount %>
                                            </td>
                                            <td>
                                                <%= product.salePrice %>
                                            </td>
                                            <td>
                                                <a href="/gadgetly/admin/edit?id=<%=product._id %>" class="btn btn-sm font-sm rounded btn-brand">
                                                    <i class="material-icons md-edit"></i> Edit
                                                </a>
                                            </td>

                                            <td>
                                               <%= product.Stock %>
                                            </td>

                                            <td>
                                                <%if(product.is_listed ==0 ){ %>
                                                    <a href="/gadgetly/admin/list?id=<%=product._id %>" class="btn btn-sm font-sm btn-light rounded  list-btn"  productId="<%=product._id %>" style="background-color: green;">
                                                        <i class="material-icons md-delete_forever"></i> List
                                                    </a>
                                                <% }else{ %>
                                                    <a href="/gadgetly/admin/unlist?id=<%=product._id %>"  class="btn btn-sm font-sm btn-light rounded unlist-btn" productId="<%=product._id %>"  style="background-color: red;">
                                                        <i class="material-icons md-delete_forever"></i> Unlist
                                                    </a>
                                               <% } %>
                                            </td>

                                            
                                        </tr>
                                       <%})
                                      } else{ %>
                                      <% } %>
        
                                    </tbody>
                                </table>
                            </div>
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->

        </section> <!-- content-main end// -->
        <script>
            $(document).ready(function() {
              $('#myTable').DataTable();
          });
        </script>
        <%-include('../layout/adminfooter') %>